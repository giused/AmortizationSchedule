@model AmortizationModel
@{
}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @Html.ActionLink("Generate Amortization Schedule", "Index", "Amortization")
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<form class="form-horizontal" method="post">
    <div class="row">
        <div class="form-group col-sm-2">
            @Html.LabelFor(m => m.AnnualInterestRate)
            <div class="col-sm-12">
                @Html.TextBoxFor(model => model.AnnualInterestRate, new { @class = "form-control col-sm-12", required = "required" })
            </div>
        </div>
        <div class="form-group col-sm-2">
            @Html.LabelFor(m => m.NumberOfPayments)
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.NumberOfPayments, new { @class = "form-control col-sm-12", required = "required" })
            </div>
        </div>
        <div class="form-group col-sm-2">
            @Html.LabelFor(m => m.LoanAmount)
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.LoanAmount, new { @class = "form-control col-sm-12", required = "required" })
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Generate</button>
            </div>
        </div>
    </div>
</form>